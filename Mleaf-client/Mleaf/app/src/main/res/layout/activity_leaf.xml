<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/result">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageframe"
            android:layout_width="150dp"
            android:layout_height="208dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/result_imageframe"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:maxWidth="400dp"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:textColor="#000000" />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:layout_gravity="bottom">

          <ImageButton
              android:id="@+id/leaf_right"
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:layout_marginLeft="20dp"
              android:background="@drawable/leaf_right"/>

          <ImageButton
              android:id="@+id/leaf_indistinct"
              android:layout_width="65dp"
              android:layout_height="65dp"
              android:layout_marginLeft="40dp"
              android:background="@drawable/leaf_indistinct"/>

          <ImageButton
              android:id="@+id/leaf_error"
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:layout_marginLeft="40dp"
              android:background="@drawable/leaf_error"/>

      </LinearLayout>



    </FrameLayout>


</LinearLayout>
